@using EmployeeData.DataObjectTransfer
@model EmployeeData.Models.Employee

@{
    var action = ViewData["Action"];
}
<form asp-controller="Employee" asp-action="save" method="post">
    @Html.Hidden("action",action)
    @if (action != null && action.ToString().ToLower().Equals("edit"))
        {
            <input asp-for="EmployeeId" type="hidden" />
        }
    <div class="row mb-3">
        <label for="FirstName" class="col-sm-2 col-form-label">FirstName</label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="LastName" class="col-sm-2 col-form-label">LastName</label>
        <div class="col-sm-10">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="HomePhone" class="col-sm-2 col-form-label">Home Phone</label>
        <div class="col-sm-10">
            <input asp-for="HomePhone" class="form-control" />
            <span asp-validation-for="HomePhone"></span>
        </div>
    </div>
    <input asp-for="Active" class="form-control" type="hidden"/>  
    <div class="row mb-3">
        <label for="AddSkill" class="col-sm-2 col-form-label">Add</label>
        <div class="col-sm-10">
            <input type="text" id="addSkill" name="addSkill">
            <button value="Add"  class="btn btn-primary" asp-action="AddNewSkill">Add Skill</button>
        </div>
    </div>

    @*<label for="addSkill">Add Skill:</label>
    <input type="text" id="addSkill" name="addSkill">
    <button value="Add"  class="btn btn-primary" asp-action="AddNewSkill">Add Skill</button>*@

    <br/>
    <br/>
    <button type="submit" value="Save" class="btn btn-primary">Save</button>
    <br/>
    <br/>
    @if (action != null && action.ToString().ToLower().Equals("edit"))
    {        
        <table class="table">
            <tr>
                <th>Skills</th>
                <th></th>
            </tr>
            @foreach(EmployeeSkillDTO skill in ViewBag.Skills)
            {
                <tr>
                    <td>@skill.Description</td>
                    <td>@Html.ActionLink("Delete", "DeleteSkill", new {empSkillId=skill.EmployeeSkillId, empId=Model.EmployeeId})</td>
                </tr>
            }
        </table>
    }
</form>